<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
  </head>
  <body>
    <header>
      <h1>Smart To-Do List</h1>
    </header>
    <section class="task-adder">
      <form class="" action="/" method="post">
        <!-- <label for="todos">Add a new task</label> -->
        <input type="text" name="todos" value="" placeholder="Type your task here">
        <button type="submit">Add Task</button>
      </form>
    </section>
    <section class="task-list">
      <form class="" action="/completed" method="post">
        {{#todos}}
        <button type="submit" name="completed" value="{{.}}">
        Done</button><span> {{.}}</span><br>
        {{/todos}}
      </form>
    </section>
    <section class="complete-tasks">
      <h2>Completed Tasks</h2>
      <ul>
        {{#complete}}<li>{{.}}</li>{{/complete}}
      </ul>
    </section>
  </body>
</html>
